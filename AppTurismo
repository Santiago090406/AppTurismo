    <script>
        // Data
        const places = [
            {
                id: 1,
                name: "Catedral de Cartagena",
                category: "monument",
                rating: 4.8,
                reviews: 1240,
                distance: "0.5 km",
                description: "Hermosa catedral colonial del siglo XVI con arquitectura impresionante",
                price: "Gratis",
                image: "🏛️",
                coordinates: [10.4236, -75.5378],
                openHours: "6:00 AM - 7:00 PM",
                features: ["Guía disponible", "Acceso para discapacitados", "Fotografía permitida"]
            },
            {
                id: 2,
                name: "Restaurante La Cevichería",
                category: "restaurant",
                rating: 4.6,
                reviews: 890,
                distance: "0.8 km",
                description: "Auténtica comida caribeña con los mejores ceviches de la ciudad",
                price: "$$",
                image: "🍽️",
                coordinates: [10.4242, -75.5376],
                openHours: "11:00 AM - 10:00 PM",
                features: ["Terraza", "Reservas online", "Menú vegetariano"]
            },
            {
                id: 3,
                name: "Hotel Boutique Casa India",
                category: "hotel",
                rating: 4.9,
                reviews: 456,
                distance: "1.2 km",
                description: "Hotel boutique en el corazón de la ciudad amurallada",
                price: "$180/noche",
                image: "🏨",
                coordinates: [10.4230, -75.5380],
                openHours: "24 horas",
                features: ["Piscina", "Spa", "Desayuno incluido", "WiFi gratis"]
            },
            {
                id: 4,
                name: "Tour Islas del Rosario",
                category: "activity",
                rating: 4.7,
                reviews: 2100,
                distance: "15 km",
                description: "Excursión de día completo a las paradisíacas islas del Rosario",
                price: "$65/persona",
                image: "🏝️",
                coordinates: [10.1733, -75.7667],
                openHours: "8:00 AM - 5:00 PM",
                features: ["Transporte incluido", "Almuerzo", "Snorkel", "Guía bilingüe"]
            }
        ];

        // State
        let currentTab = 'explore';
        let searchQuery = '';
        let selectedCategory = 'all';
        let favorites = [];
        let itinerary = [];
        let isOffline = false;
        let selectedPlace = null;

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            renderPlaces();
            
            // Search functionality
            document.getElementById('searchInput').addEventListener('input', function(e) {
                searchQuery = e.target.value;
                renderPlaces();
            });
        });

        // Tab management
        function showTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Remove active class from all nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            
            // Add active class to clicked nav item
            event.target.classList.add('active');
            
            currentTab = tabName;
        }

        // Category filtering
        function filterByCategory(category) {
            selectedCategory = category;
            
            // Update button states
            document.querySelectorAll('.category-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
            
            renderPlaces();
        }

        // Search functionality
        function searchPlaces() {
            searchQuery = document.getElementById('searchInput').value;
            renderPlaces();
        }

        // Render places
        function renderPlaces() {
            const filteredPlaces = places.filter(place => {
                const matchesSearch = place.name.toLowerCase().includes(searchQuery.toLowerCase()) ||
                                     place.description.toLowerCase().includes(searchQuery.toLowerCase());
                const matchesCategory = selectedCategory === 'all' || place.category === selectedCategory;
                return matchesSearch && matchesCategory;
            });

            const placesList = document.getElementById('placesList');
            placesList.innerHTML = '';

            filteredPlaces.forEach(place => {
                const placeCard = createPlaceCard(place);
                placesList.appendChild(placeCard);
            });
        }

        // Create place card
        function createPlaceCard(place, isCompact = false) {
            const card = document.createElement('div');
            card.className = `place-card ${isCompact ? 'compact' : ''}`;

            card.innerHTML = `
                <div class="place-image">
                    ${place.image}
                </div>
                <div style="flex: 1;">
                    <div class="place-header">
                        <h3 class="place-title">${place.name}</h3>
                        <button class="btn-heart ${favorites.includes(place.id) ? 'active' : ''}" onclick="toggleFavorite(${place.id})">
                            ❤️
                        </button>
                    </div>
                    
                    <div class="place-rating">
                        <span>⭐</span>
                        <span style="font-weight: 600;">${place.rating}</span>
                        <span style="color: #6b7280;">(${place.reviews} reseñas)</span>
                        <span style="margin-left: 0.75rem;">📍</span>
                        <span style="color: #6b7280;">${place.distance}</span>
                    </div>
                    
                    <p class="place-description">${place.description}</p>
                    
                    <div class="place-footer">
                        <div class="place-info">
                            <span style="font-weight: bold; color: #10b981;">${place.price}</span>
                            <span>🕒</span>
                            <span style="font-size: 0.875rem; color: #6b7280;">${place.openHours}</span>
                        </div>
                        
                        <div class="place-actions">
                            <button class="btn-small blue" onclick="showPlaceDetail(${place.id})">Ver más</button>
                            <button class="btn-small green" onclick="addToItinerary(${place.id})">+ Itinerario</button>
                        </div>
                    </div>
                </div>
            `;

            return card;
        }

        // Toggle favorite
        function toggleFavorite(placeId) {
            if (favorites.includes(placeId)) {
                favorites = favorites.filter(id => id !== placeId);
            } else {
                favorites.push(placeId);
            }
            
            renderPlaces();
            renderFavorites();
        }

        // Add to itinerary
        function addToItinerary(placeId) {
            const place = places.find(p => p.id === placeId);
            if (place && !itinerary.some(item => item.id === placeId)) {
                itinerary.push({
                    ...place,
                    time: new Date().toLocaleTimeString()
                });
                renderItinerary();
                alert('¡Lugar añadido al itinerario!');
            }
        }

        // Show place detail
        function showPlaceDetail(placeId) {
            selectedPlace = places.find(p => p.id === placeId);
            if (selectedPlace) {
                document.getElementById('modalTitle').textContent = selectedPlace.name;
                document.getElementById('modalImage').textContent = selectedPlace.image;
                document.getElementById('modalDescription').textContent = selectedPlace.description;
                
                // Info section
                document.getElementById('modalInfo').innerHTML = `
                    <div style="display: flex; align-items: center; margin-bottom: 0.5rem;">
                        <span style="margin-right: 0.5rem;">⭐</span>
                        <span>${selectedPlace.rating} (${selectedPlace.reviews} reseñas)</span>
                    </div>
                    <div style="display: flex; align-items: center; margin-bottom: 0.5rem;">
                        <span style="margin-right: 0.5rem;">📍</span>
                        <span>${selectedPlace.distance}</span>
                    </div>
                    <div style="display: flex; align-items: center; margin-bottom: 0.5rem;">
                        <span style="margin-right: 0.5rem;">🕒</span>
                        <span>${selectedPlace.openHours}</span>
                    </div>
                    <div style="display: flex; align-items: center;">
                        <span style="margin-right: 0.5rem;">💳</span>
                        <span style="font-weight: bold;">${selectedPlace.price}</span>
                    </div>
                `;
                
                // Features section
                document.getElementById('modalFeatures').innerHTML = selectedPlace.features.map(feature => `
                    <div style="display: flex; align-items: center; margin-bottom: 0.25rem;">
                        <div style="width: 8px; height: 8px; background: #10b981; border-radius: 50%; margin-right: 0.5rem;"></div>
                        <span style="font-size: 0.875rem;">${feature}</span>
                    </div>
                `).join('');
                
                document.getElementById('placeModal').classList.add('active');
            }
        }

        // Close modal
        function closeModal() {
            document.getElementById('placeModal').classList.remove('active');
            selectedPlace = null;
        }

        // Add to itinerary from modal
        function addToItineraryFromModal() {
            if (selectedPlace) {
                addToItinerary(selectedPlace.id);
                closeModal();
            }
        }

        // Show reservation (placeholder)
        function showReservation() {
            alert('Funcionalidad de reserva en desarrollo. ¡Pronto disponible!');
        }

        // Render favorites
        function renderFavorites() {
            const favoritesList = document.getElementById('favoritesList');
            
            if (favorites.length === 0) {
                favoritesList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">❤️</div>
                        <p>No tienes favoritos aún</p>
                        <p style="font-size: 0.875rem; color: #6b7280;">Marca lugares como favoritos para verlos aquí</p>
                    </div>
                `;
                return;
            }

            favoritesList.innerHTML = '';
            const favoritePlaces = places.filter(place => favorites.includes(place.id));
            
            favoritePlaces.forEach(place => {
                const placeCard = createPlaceCard(place, true);
                favoritesList.appendChild(placeCard);
            });
        }

        // Render itinerary
        function renderItinerary() {
            const itineraryList = document.getElementById('itineraryList');
            
            if (itinerary.length === 0) {
                itineraryList.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">📅</div>
                        <p>Tu itinerario está vacío</p>
                        <p style="font-size: 0.875rem; color: #6b7280;">Añade lugares desde la pestaña Explorar</p>
                    </div>
                `;
                return;
            }

            itineraryList.innerHTML = '';
            
            itinerary.forEach((place, index) => {
                const itineraryItem = document.createElement('div');
                itineraryItem.className = 'itinerary-item';
                
                itineraryItem.innerHTML = `
                    <div class="itinerary-item-header">
                        <h4 class="itinerary-item-title">${place.name}</h4>
                        <span class="itinerary-item-time">${place.time}</span>
                    </div>
                    <p class="itinerary-item-description">${place.description}</p>
                    <div class="itinerary-item-info">
                        <span>📍</span>
                        <span>${place.distance}</span>
                        <span>•</span>
                        <span>${place.price}</span>
                    </div>
                `;
                
                itineraryList.appendChild(itineraryItem);
            });
            
            // Add optimize button
            const optimizeBtn = document.createElement('div');
            optimizeBtn.style.paddingTop = '1rem';
            optimizeBtn.style.borderTop = '1px solid #e5e7eb';
            optimizeBtn.innerHTML = `
                <button class="btn-full green" onclick="optimizeRoute()">
                    Optimizar ruta
                </button>
            `;
            itineraryList.appendChild(optimizeBtn);
        }

        // Optimize route (placeholder)
        function optimizeRoute() {
            alert('Optimizando ruta... ¡Ruta optimizada!');
        }

        // Toggle offline mode
        function toggleOfflineMode() {
            isOffline = !isOffline;
            const statusIndicator = document.getElementById('statusIndicator');
            const statusText = document.getElementById('statusText');
            
            if (isOffline) {
                statusIndicator.className = 'status-indicator status-offline';
                statusIndicator.innerHTML = '<span>📶</span><span>Offline</span>';
            } else {
                statusIndicator.className = 'status-indicator status-online';
                statusIndicator.innerHTML = '<span>🌐</span><span>Online</span>';
            }
        }

        // Close modal when clicking outside
        document.getElementById('placeModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeModal();
            }
        });

        // Handle keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
            }
        });
    </script>
</body>
</html>
